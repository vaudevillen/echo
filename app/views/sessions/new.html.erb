<%= form_tag '/login' do %>
 <div class="row">
    <form class="col s8">
      <div class="row">
        <div class="input-field col s4">
          <%= text_field_tag :username %>
          <label for="last_name">Username</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s4">
          <%= password_field_tag :password %>
          <label for="password">Password</label>
        </div>
      </div>
     <%= submit_tag "Login", :class => "btn waves-effect waves-light"%>
    </form>
  </div>
<% end %>